<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="anchor_window" prefHeight="620.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bourlaforme.gui.front.message.MessagerieController">
   <children>
      <ListView fx:id="users" layoutX="14.0" layoutY="64.0" onMouseClicked="#get_convo" prefHeight="452.0" prefWidth="193.0" />
      <TextField fx:id="search_bar" layoutX="13.0" layoutY="23.0" onAction="#search_convo" prefHeight="31.0" prefWidth="274.0" promptText="Search..." />
      <TextField fx:id="crud_bar" layoutX="13.0" layoutY="530.0" prefHeight="31.0" prefWidth="274.0" />
      
            <Button fx:id="add_btn" layoutX="13.0" layoutY="569.0" mnemonicParsing="false" onAction="#add_convo" prefHeight="31.0" prefWidth="129.0" style="-fx-background-color: FF5056; -fx-border-radius: 50;" text="Ajouter">
                    <font>
                        <Font name="System Bold Italic" size="13.0" />
                    </font>
                </Button>
                
          <Button fx:id="del_btn" layoutX="158.0" layoutY="569.0" mnemonicParsing="false" onAction="#del_convo" prefHeight="31.0" prefWidth="129.0" style="-fx-background-color: FF5056; -fx-border-radius: 50;" text="Supprimer">
                    <font>
                        <Font name="System Bold Italic" size="13.0" />
                    </font>
                </Button>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="590.0" layoutX="300.0" layoutY="15.0" stroke="BLACK" strokeType="INSIDE" width="6.0" />
      <ListView fx:id="msg_source" layoutX="311.0" layoutY="15.0" prefHeight="505.0" prefWidth="157.0" />
      <ListView fx:id="conversation" layoutX="468.0" layoutY="14.0" prefHeight="505.0" prefWidth="717.0" />
      <TextField fx:id="message" alignment="TOP_LEFT" layoutX="311.0" layoutY="530.0" prefHeight="77.0" prefWidth="711.0" promptText="What's on your mind..." />
        
             <Button fx:id="send_button" layoutX="1040.0" layoutY="536.0" mnemonicParsing="false" onAction="#send_message" prefHeight="67.0" prefWidth="129.0" style="-fx-background-color: FF5056; -fx-border-radius: 50;" text="Envoyer">
                    <font>
                        <Font name="System Bold Italic" size="13.0" />
                    </font>
                </Button>  
          
        
      
   </children>
</AnchorPane>
